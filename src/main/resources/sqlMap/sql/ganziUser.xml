<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="ganziUser">
	<typeAlias alias="GanziUserDto" type="com.ganzi.dto.GanziUserDto"/>
 	
	
	<select id="list" parameterClass="GanziUserDto" resultClass="GanziUserDto">
		SELECT 
				userid
			,	userpwd
			,	userrole
		FROM ganzi_user
	</select>
	
	<select id="login" parameterClass="GanziUserDto" resultClass="GanziUserDto">
		SELECT 
				userid
			,	userpwd
			,	userrole
		FROM ganzi_user
		<dynamic>
			<isNotNull property="userid" prepend="AND">
				userid = #userid#
			</isNotNull>
		</dynamic>
	</select>
	
</sqlMap>